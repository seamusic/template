@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Global stylesheets -->
    @Styles.Render("~/Content/css/base")
    <!-- /global stylesheets -->
    @RenderSection("style", required: false)
    <!-- Core JS files -->
    @Scripts.Render("~/Scripts/core")
    <!-- /core JS files -->
</head>
<body>
    <!-- Main navbar -->
<div class="navbar navbar-default header-highlight">
    @Html.Partial("_Navbar")
</div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main sidebar -->
            <div class="sidebar sidebar-main">
                @Html.Partial("_Sidebar")                
            </div>
            <!-- /main sidebar -->
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Content area -->
                <div class="content">
                    <!-- Dashboard content -->
                    <div class="row">
                        @RenderBody()
                    </div>
                    <!-- /dashboard content -->
                    <!-- Footer -->
                    @Html.Partial("_Footer")
                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->


@Scripts.Render("~/Scripts/theme")
<script type="text/javascript" src="~/Scripts/core/app.js"></script>
<script type="text/javascript" src="~/Scripts/pages/dashboard.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>